<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/reg_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
   <RelativeLayout android:background="@drawable/bg_topbar" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:textSize="@dimen/contact_detail_topbar_btn_textsize" android:textColor="@color/white" android:gravity="center" android:id="@id/bind_return_btn" android:background="@drawable/reg_return" android:paddingLeft="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/contact_detail_topbar_btn_left" android:text="@string/back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:onClick="mback"/>
        <TextView android:textSize="24.0dip" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拨打电话" android:layout_centerInParent="true" />
    </RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="43dip"
        android:layout_marginBottom="50dip"
        android:clickable="true"
        android:scrollbars="vertical"
        android:background="#FFFFFF">
    <LinearLayout
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> 

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:background="@drawable/userdbg" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:src="@drawable/tab_contact_selected" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="主叫：" />

            <TextView
                android:id="@+id/fcall"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="15863210992" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:background="@drawable/userdbg" >

             <ImageView
                 android:id="@+id/imageView3"
                 android:layout_width="24dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="5dip"
                 android:src="@drawable/contact_detail_call" />

            <TextView
                android:id="@+id/userpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="被叫：" />

            <EditText
                android:id="@+id/tcall"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:ems="10"
                android:hint="请输入要拨打的电话号码"
                android:inputType="phone"
                android:textSize="12dip" >

                <requestFocus />
            </EditText>
            
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:text="固定电话(小灵通)：区号+电话号码，例如   01088888888，拨通后对方显示是您的号码"
            android:textSize="12dip" />

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:background="@drawable/wewe_key_bg_blue"
            android:orientation="vertical" 
            android:onClick="mcallok">

            <TextView
                android:id="@+id/callok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dip"
                android:text="提交拨打"
                android:textColor="#FFFFFF"
                android:textSize="22dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:textColor="#ff0000"
                android:textSize="12dip" />

        </LinearLayout>

        <WebView
            android:id="@+id/bmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

      </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/home_footbar_layout"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:background="@drawable/usertop"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:text="智通支持拨打全国移动、联通、电信、固话小灵通         开通包月后可不限时间不限时段任意拨打"
            android:textSize="12dip" />

    </LinearLayout>

    </RelativeLayout>
</LinearLayout>