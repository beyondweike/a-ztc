<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="54dip"
    android:orientation="horizontal"
    android:background="@drawable/bottom_bg" >
    
    <LinearLayout 
        android:id="@+id/bottom_home_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="4dip"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/home_bottom_style"
        >
        <ImageView 
            android:id="@+id/home_bottom_home_bn"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            android:background="@drawable/bottom_home_bn_style"
            android:onClick="mcall1"
            />
    </LinearLayout>
        <LinearLayout 
        android:id="@+id/bottom_card_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_style">
        <ImageView 
            android:id="@+id/home_bottom_card_bn"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            android:background="@drawable/bottom_card_bn_style"
            android:onClick="mcall2"/>
    </LinearLayout>
      <LinearLayout 
        android:id="@+id/bottom_msg_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_style">
        <ImageView 
            android:id="@+id/home_bottom_msg_bn"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            android:background="@drawable/bottom_msg_bn_style"
            android:onClick="mcall3"/>
    </LinearLayout>
        <LinearLayout 
        android:id="@+id/bottom_order_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_style">
        <ImageView 
            android:id="@+id/home_bottom_order_bn"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            android:background="@drawable/bottom_order_bn_style"
            android:onClick="mcall4"/>
    </LinearLayout>
        <LinearLayout 
        android:id="@+id/bottom_other_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/home_bottom_style">
        <ImageView 
            android:id="@+id/home_bottom_other_bn"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_gravity="center"
            android:background="@drawable/bottom_other_bn_style"
            android:onClick="mcall5"/>
	</LinearLayout>

</LinearLayout>